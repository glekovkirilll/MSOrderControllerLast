@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4"><strong>Добро пожаловать</strong></h1>
    <h4>в систему управления заказами</h4>
    <br />

<div class="row pl-1 ml-1 pr-1 mr-1">
  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Заказчики</h5>
        <p class="card-text">Создание и редактирование списка заказчиков</p>
        <a asp-area="" asp-controller="Customers" asp-action="Index" class="btn btn-primary">Перейти</a>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Узлы</h5>
        <p class="card-text">Создание и редактирование списка узлов</p>
        <a asp-area="" asp-controller="Units" asp-action="Index" class="btn btn-primary">Перейти</a>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Заказы</h5>
        <p class="card-text">Создание и редактирование списка заказов</p>
        <a class="btn btn-primary" asp-area="" asp-controller="Histories" asp-action="Index" >Перейти</a>
      </div>
    </div>
  </div>
</div>
</div>
