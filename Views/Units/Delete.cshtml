@model MSOC.Models.Unit

@{
    ViewData["Title"] = "Удаление узла";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить?</h3>
<div>
    <h4>Unit</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Каталожный номер
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatalogNumber)
        </dd>
        <dt class = "col-sm-2">
            Марка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mark)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-outline-danger" />
        <a type="button" class="btn btn-outline-info" asp-action="Index">Назад к списку</a>
    </form>
</div>
