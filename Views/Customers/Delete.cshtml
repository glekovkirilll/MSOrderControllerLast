@model MSOC.Models.Customer

@{
    ViewData["Title"] = "Удаление заказчика";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Адрес
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Index), @Html.DisplayFor(model => model.Region), @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.Adress)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a type="button" class="btn btn-outline-info" asp-action="Index">Назад к списку</a>
    </form>
</div>
