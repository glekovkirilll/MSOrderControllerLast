@model MSOC.Models.History

@{
    ViewData["Title"] = "Удаление заказа";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Номер актов
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstNumber)
        </dd>
        <dt class = "col-sm-2">
            Номер ТТН
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondNumber)
        </dd>
        <dt class = "col-sm-2">
            Заказчик
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd class>
        <dt class = "col-sm-2">
            Дата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-outline-danger" />
        <a type="button" class="btn btn-outline-info" asp-action="Index">Назад к списку</a>
    </form>
</div>
